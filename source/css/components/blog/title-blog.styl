.title-blog
    width 100%
    background-image: linear-gradient(to right, $color.secundary, #c83d8c, #ce5198)
    padding 50px 20px
    display flex
    flex-direction column
    align-items: center
    .category
        font-size 14px
        color: $color.white
        margin-bottom 20px
        text-transform uppercase
    h1
        font-size 3.5rem
        color: $color.white
        text-align center
        margin-bottom 20px
        +below(30rem)
            font-size 3rem
    .share
        display flex
        flex-wrap: wrap
        align-items: center
        justify-content: center
        .text
            font-size 14px
            color: $color.white
            font-style italic
            display block
            width 100%
            margin-bottom 10px
            text-align center
        a
            font-size 16px
            color: $color.white
            display block
            width 40px
            height 40px
            border-radius 40px
            border: 2px solid $color.white
            line-height 36px
            text-align center
            &:not(:last-child)
                margin-right 5px