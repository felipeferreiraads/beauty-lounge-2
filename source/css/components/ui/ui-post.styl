.post
    width: 100%
    display: block
    padding: 1rem
    display: flex
    border-radius: 5px
    transition: .3s
    margin-bottom: 3rem
    +below(30em)
        display flex
        flex-direction column
        width 100%
    &:hover
        background: $color.primaryhover
    figure
        width: 30rem
        height: 18rem
        border-radius: 5px
        overflow: hidden
        +below(30em)
            width 100%
        img 
            width: 100%
            height 100%
            object-fit: cover
            object-position: center 
    .info
        flex: 1
        padding: 0 2rem 0 3rem
        display: flex
        flex-direction: column
        justify-content: center
        +below(30em)
            padding 2rem 0 0 0
        span
            font-size: 1.4rem
            font-weight: 600
            color: $color.white
            text-transform: uppercase
            margin-bottom: 1.5rem
        h3
            font-size: 2rem
            font-weight: 800
            color: $color.white
            margin-bottom: 1.5rem
            +below(40em)
                font-size 1.6rem
        p
            font: 1.4rem/2.5rem 'Noto Sans'
            color: $color.white

.posts-internal
    .post
        &:hover
            background #f2f2f2
        span
            color: $color.primary
        h3
            color: $color.primary
        p
            color: $color.text