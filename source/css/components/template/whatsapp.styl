.whatsapp-fixed
    width 50px
    height 50px
    border-radius: 50px
    background: #09d261
    line-height 50px
    text-align center
    color: white
    font-size: 30px
    position fixed
    bottom 20px
    right 20px
    display inline-block
    &:hover
        > .tooltip
            visibility: visible
            opacity 1
    .tooltip
        padding 10px 0
        background: #09d261
        border-radius: 5px
        color: white
        position absolute
        top 50%
        right 120%
        transform translateY(-50%)
        display block
        font-size 16px
        width 300px
        line-height 1.4
        visibility hidden
        opacity: 0
        transition: opacity 0.5s
        &::after
            content: ""
            position: absolute
            top: 50%
            left: 100%
            transform translateY(-50%)
            width: 0
            height: 0
            border-style: solid
            border-width: 5px 0 5px 6px
            border-color: transparent transparent transparent #09d261