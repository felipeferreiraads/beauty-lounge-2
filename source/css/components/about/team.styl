.team
    margin 7rem 0
    .grid
        display flex
        justify-content: space-between
        flex-wrap: wrap
        width 100rem
        max-width 100%
        margin 5rem auto 0
        .item
            width 33.33%
            display flex
            flex-direction column
            align-items: center
            padding 2rem
            +below(64rem)
                width 50%
            +below(30rem)
                width 100%
        figure
            width 20rem
            height 20rem
            border-radius 20rem
            border 1px solid #e6e6e6
            overflow hidden
            &:hover
                > .first
                    display none
                > .second
                    display block
            img
                width 100%
                height 100%
                object-fit: contain
                object-position: center
            .second
                display none
        h3
            font-size 2rem
            color: $color.primary
            text-align center
            margin 1rem 0
        span
            font-size 1.6rem
            color: $color.text
            font-family: $font-family.secondary
            display block
            text-align center