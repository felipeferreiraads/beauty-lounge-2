.form-contact
    flex-basis 50%
    padding-left 5%
    display flex
    flex-direction column
    +below(62em)
        flex-basis: 100%
        padding 0
    label
        text-transform uppercase
        color: $color.primary
        font-size 1.3rem
    input, textarea
        margin-bottom 2rem
        height 3rem
        border-width: 0 0 1px 0
        border-color: $color.text
        color: $color.text
        font-size 1.3rem
        &.error
            border-color: red
    textarea
        height 12rem
        resize none
        margin-top 5px
    button
        width 15rem
        height 4rem
        background: $color.primary
        color: $color.white
        border: none
        font-size: 1.3rem
        font-weight: bold
        text-transform uppercase
        transition: .3s
        cursor pointer
        align-self: flex-end
        &:hover
            background: $color.primaryhover