.info-contact
    flex-basis 50%
    display flex
    flex-direction column
    align-items: flex-end
    padding-right 5%
    border-right 1px solid #e6e6e6
    +below(62em)
        flex-basis 100%
        align-items: center
        border none
        padding 0
        margin-bottom 5rem
    > *
        margin-bottom 2rem
    h3
        font-size: 2rem
        color: $color.primary
    address, p, .phone
        font-size 1.8rem
        color: $color.text
        font-family: $font-family.secondary
        font-style normal
        text-align right
        line-height 1.5
        +below(62em)
            text-align center