.banner
    width 100%
    height 48rem
    background: $color.secundary
    display flex
    justify-content: center
    overflow hidden
    .carousel, .carousel-mobile
        width 100%
        height 100%
        position relative
    .owl-stage-outer
        width 100%
        height 100%
    .owl-stage
        display: flex
        height 100%
    .owl-nav
        display none
    .owl-dots
        position absolute
        bottom 2rem
        left 50%
        transform translateX(-50%)
    .owl-item
        display flex
        justify-content: center
        height 100%
        overflow hidden
        img
            height 100%
    .carousel
        display block
        +below(48em)
            display none
    .carousel-mobile
        display none
        +below(48em)
            display block