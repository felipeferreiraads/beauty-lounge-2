.blog-home
    width: 100%
    background-image: linear-gradient(to right, $color.secundary, #c83d8c, #ce5198)
    .container
        max-width 100%
        padding: 8em 0 5rem
        background: url(../img/bg-blog-home.png) left bottom no-repeat
        background-size 350px

.grid-blog-home
    max-width 128rem
    display: flex
    justify-content: space-between
    margin 0 auto
    padding 0 2rem
    +below(62em)
        flex-direction: column
    h2
        font-size: 3rem
        font-weight: 800
        color: $color.white
        margin-bottom 40px
        &::after
            content ''
            display block
            margin-top 1rem
            width 3rem
            height 5px
            border-radius 2px
            background: $color.white
    .left
        width: 50%
        padding-right 5%
        border-right: 1px solid $color.white
        +below(62em)
            width 100%
            border-right: none
            padding 0
            margin-bottom 5rem
        p 
            font-size 1.8rem
            color: $color.white
            font-family: $font-family.secondary
            line-height 1.7
        > p:not(:first-child)
            margin-top 20px
    
    .right
        width: 50%
        padding-left 4%
        +below(62em)
            width 100%
            padding 0
        .post
            margin-bottom 2rem
            figure
                width 15rem
                height 10rem
                +below(30em)
                    width 100%
                    height 15rem