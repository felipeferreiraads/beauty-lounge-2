.testmonials
    padding: 60px 0;
    border-bottom: 1px solid #f4f4f4
    .subtitle
        margin: 0 auto 30px
    .quote
        max-width: 700px
        margin: 0 auto
        position relative
    .carousel
        overflow hidden
        position relative
    .owl-stage
        display: flex
        justify-content: space-between
        height: 100%
        +between(1050px, 1150px)
            left: -5rem
        +below(1050px)
            left: -12rem
    .owl-stage-outer
        padding-bottom 5rem
    .owl-item
        display flex
        justify-content: center
    .testmonial
        padding: 0 20px
    figure
        width: 170px
        height: 170px
        border-radius: 170px
        overflow hidden
        margin: 0 auto 20px
        img 
            width: 100%
            height 100%
            object-fit: cover
            object-position: center
    p
        font-size: 18px
        color: $color.text
        font-family: $font-family.secondary
        text-align: center
    h3
        font-size: 18px
        color: $color.primary
        text-align: center
        margin-top: 15px;
    .fa-quote-left
        font-size: 40px
        color: $color.primary
        +above($bp.md)
            position absolute
            top: 0
            right: 102%
