.treatments
    width 100%
    padding 10rem 0
    border-bottom 1px solid #e6e6e6
    .grid-treatments
        width 100%
        position relative
        +below(40em)
            padding 0 15px
    .prev, .next
        font-size 5rem
        color: $color.primary
        position absolute
        top 62%
        left 0
        transform translateY(-50%)
        cursor pointer
    .next
        left auto
        right 0

    p.subtitle
        font-size 1.8rem
        color: $color.text
        max-width 450px
        text-align center
        margin 0 auto 6rem
        font-family: $font-family.secondary
    .carousel
        flex: 1
        overflow hidden
        padding 0 0 2rem 0
    .owl-stage
        display: flex
        justify-content: space-between
        height: 100%
        +between(1050px, 1150px)
            left: -5rem
        +below(1050px)
            left: -12rem
    .owl-stage-outer
        padding-bottom 5rem
    .owl-item
        display flex
        justify-content: center

.treatment
    width 50rem
    border-radius 20rem 5px 5px 20rem
    display flex
    position relative
    border 1px solid #e6e6e6
    +below(40em)
        width 100%
        flex-direction column
        border-radius 5px
    figure
        width 20rem
        height 20rem
        border-radius 20rem
        overflow hidden
        +below(40em)
            width 100%
            height 15rem
            border-radius 0
        img
            +below(40em)
                width 100%
                height 100%
                object-fit: cover
                object-position: top

    .info
        flex 1
        padding: 2rem 2rem 3rem
        h3
            font-size 3.5rem
            color: $color.primary
            margin-bottom 2rem
        p
            font-size 1.6rem
            color: $color.text
            font-family: $font-family.secondary

.owl-nav
    display none

.owl-dots
    display flex
    justify-content: center
    .owl-dot
        border none
        background transparent
        width auto
        padding 0
        span
            width 1.2rem
            height 1.2rem
            border-radius 1.2rem
            background: $color.primary
            margin-right .5rem
            border none
            display block
    .active span
        background: $color.primaryhover

.all
    width 39rem
    max-width 100%
    display block
    font-family: $font-family.secondary
    font-size: 1.8rem
    color: $color.primary
    padding 1rem
    margin 5rem auto 0